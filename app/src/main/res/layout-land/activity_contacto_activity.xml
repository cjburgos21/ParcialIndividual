<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contacto_activity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/contact_img"
                android:layout_width="125dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="#848484"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/contac_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Nombre"
                android:textSize="@dimen/text_sizedef" />

            <TextView
                android:id="@+id/contac_telef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Telefono"
                android:textSize="@dimen/text_sizedef" />

            <TextView
                android:id="@+id/contac_correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Correo"
                android:textSize="@dimen/text_sizedef" />


                <ImageButton
                    android:id="@+id/llama_id"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/llamar" />

                <ImageButton
                    android:id="@+id/compartid"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="3"
                    android:src="@drawable/comparte2" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>